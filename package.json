{
  "name": "captured",
  "version": "1.0.0",
  "engines": {
    "node": "18.x"
  },
  "description": "captured is a social media platforms",
  "main": "index.js",
  "scripts": {
    "build": "swc src --copy-files -d dist",
    "build-dev": "npm run build --env-name='development' && node --inspect dist/server.js",
    "dev": "nodemon --ext ts --exec \"npm run build-dev\" \"npm run generate\"",
    "start": "npm run build --env-name='production' && node dist/server.js",
    "generate": "graphql-codegen",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "author": "Lino Escuyos",
  "license": "ISC",
  "dependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.246",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "crypto-js": "^4.1.1",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.9.0",
    "mongoose": "^6.5.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.11.8",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.14",
    "@types/sharp": "^0.30.5",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "typescript": "^4.8.2",
    "ts-node": "^10.9.1"
  }
}
